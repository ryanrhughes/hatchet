{
  "name": "hatchet",
  "version": "1.0.0",
  "description": "Git Worktree Manager TUI with Fizzy integration",
  "type": "module",
  "bin": {
    "hatchet": "./src/main.ts"
  },
  "scripts": {
    "build": "bun build src/main.ts --outdir dist --target bun",
    "dev": "bun --watch src/main.ts",
    "start": "bun dist/main.js",
    "hatchet": "bun src/main.ts",
    "typecheck": "tsc --noEmit",
    "link": "ln -sf $(pwd)/src/main.ts ~/.local/bin/hatchet && chmod +x src/main.ts"
  },
  "dependencies": {
    "@opentui/core": "^0.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  }
}
