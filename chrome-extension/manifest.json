{
  "manifest_version": 3,
  "name": "Hatchet for Fizzy",
  "version": "1.1.0",
  "description": "Open Fizzy cards in Hatchet with one click - creates git worktrees and launches OpenCode",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://app.fizzy.do/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://app.fizzy.do/*/cards/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
